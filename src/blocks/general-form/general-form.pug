//- Все примеси в этом файле должны начинаться c имени блока (general-form)

mixin general-form(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +general-form('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' general-form--' + modsList[i].trim();
      }
    }

  .general-form(class=allMods)&attributes(attributes)
    .general-form__inner
      block
